{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/vmelamed/vm2.DevOps/schemas/fakefs.json",
  "title": "FakeFS File Structure",
  "description": "Schema for defining virtual file system structures used by FakeFS in vm2.DevOps.Glob.Api tests and benchmarks",
  "type": "object",
  "required": ["name"],
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the root folder. Typically '/' for Unix-like systems or 'C:/' for Windows",
      "examples": ["/", "C:/", "D:/"],
      "pattern": "^(/|[A-Za-z]:/)$"
    },
    "folders": {
      "type": "array",
      "description": "Array of subfolders within this folder",
      "items": {
        "$ref": "#/$defs/folder"
      },
      "default": []
    },
    "files": {
      "type": "array",
      "description": "Array of file names within this folder",
      "items": {
        "type": "string",
        "description": "File name (without path)",
        "pattern": "^[^/\\\\]+$"
      },
      "default": []
    }
  },
  "additionalProperties": false,
  "$defs": {
    "folder": {
      "type": "object",
      "description": "Represents a folder/directory in the virtual file system",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string",
          "description": "The folder name (not a path, just the name)",
          "minLength": 1,
          "pattern": "^[^/\\\\]+$",
          "examples": ["src", "test", "docs", "bin", "lib"]
        },
        "folders": {
          "type": "array",
          "description": "Nested subfolders",
          "items": {
            "$ref": "#/$defs/folder"
          },
          "default": []
        },
        "files": {
          "type": "array",
          "description": "Files in this folder",
          "items": {
            "type": "string",
            "description": "File name with extension",
            "pattern": "^[^/\\\\]+$"
          },
          "default": []
        }
      },
      "additionalProperties": false
    }
  },
  "examples": [
    {
      "name": "/",
      "folders": [
        {
          "name": "src",
          "folders": [
            {
              "name": "Models",
              "folders": [],
              "files": ["User.cs", "Product.cs"]
            }
          ],
          "files": ["Program.cs"]
        }
      ],
      "files": ["README.md"]
    },
    {
      "name": "C:/",
      "folders": [
        {
          "name": "Program Files",
          "folders": [],
          "files": []
        }
      ],
      "files": []
    }
  ]
}