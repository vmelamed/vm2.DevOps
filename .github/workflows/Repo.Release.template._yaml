name: Release to NuGet

on:
  push:
    tags:
      - "v[0-9]+.[0-9]+.[0-9]+" # Match v1.2.3
      - "v[0-9]+.[0-9]+.[0-9]+.[0-9]+" # Match v1.2.3.4

  workflow_dispatch:
    inputs:
      force-publish:
        description: "Force publish"
        type: boolean
        default: false

jobs:
  release:
    name: Stable Release
    uses: vmelamed/vm2.DevOps/.github/workflows/_release.yaml@main
    permissions:
      contents: write
    secrets: inherit
    with:
      dotnet-version: ${{ vars.DOTNET_VERSION || '10.0.x' }}
      force-publish: ${{ inputs.force-publish || false }}
      save_package_artifacts: true
      nuget-server: github # Temporarily publish to 'github' - https://nuget.pkg.github.com/. Eventually should go to 'nuget' - https://api.nuget.org/v3/index.json
